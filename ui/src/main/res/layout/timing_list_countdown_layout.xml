<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/countDownLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/white_bottom_stroke_line_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/fiftentDp">

        <com.chipsea.view.text.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/timingCountDonw"
            android:textColor="@color/black_text"
            custom:customTextSize="38" />

        <com.chipsea.view.text.CustomTextView
            android:id="@+id/countDownTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/count_donw_icon"
            android:drawablePadding="@dimen/tenDp"
            android:gravity="center"
            android:text="@string/timingAdd"
            android:textColor="@color/main_color"
            custom:customTextSize="38" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/tenDp"
            android:src="@mipmap/more_icon" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/transparent" />
</LinearLayout>