<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_solid_corners_5"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:text="提示"
        android:textColor="@color/black_text"
        android:textSize="17sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_line_color"
        />
    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:gravity="center"
        android:text="@string/myDeviceDeleteHint"
        android:textSize="17sp"
        android:textColor="@color/black_text"
        android:textIsSelectable="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#D1D1D1" />

    <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="44dp"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/cancel_bto"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:background="@drawable/tv_left"
               android:gravity="center"
               android:text="@string/cancel"
               android:textColor="@color/black_text"
               android:textSize="17sp"/>

           <ImageView
               android:layout_width="1px"
               android:layout_height="match_parent"
               android:background="#D1D1D1"/>

           <TextView
               android:id="@+id/ok_bto"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:background="@drawable/tv_rig"
               android:gravity="center"
               android:text="@string/sure"
               android:textSize="17sp"
               android:textColor="@color/black_text"/>
       </LinearLayout>
</LinearLayout>