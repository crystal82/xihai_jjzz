<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
         <ImageView
             android:id="@+id/closeImg"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="@dimen/fiftyDp"
             android:padding="@dimen/tenDp"
             android:layout_centerVertical="true"
             android:src="@mipmap/main_color_close"
             />
        <com.chipsea.view.text.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loginWelcome"
            android:layout_centerInParent="true"
            android:textColor="@color/main_color"
            app:customTextSize="65"
            android:id="@+id/customTextView" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.chipsea.view.text.CustomTextView
                android:id="@+id/lr_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="@dimen/tenDp"
                android:paddingTop="@dimen/tenDp"
                android:text="@string/login"
                android:textColor="@color/main_color"
                app:customTextSize="38" />

            <com.chipsea.view.text.CustomTextView
                android:id="@+id/lr_register"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="@dimen/tenDp"
                android:paddingTop="@dimen/tenDp"
                android:text="@string/register"
                android:textColor="@color/main_color"
                app:customTextSize="38" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/loginTag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/down_icon" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/down_icon"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragmnet_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.3"
        android:orientation="vertical">

    </LinearLayout>

</LinearLayout>