<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/itemLayout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/device_recycler_item_selector"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:padding="@dimen/twentyDp">

    <ImageView
        android:id="@+id/typeIcon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@mipmap/air_icon"/>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/twentyDp"
        android:layout_marginRight="@dimen/twentyDp"
        android:background="@color/white_line_color"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/deviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="海尔空调"
            android:textColor="@color/black_text"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/elecNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fiveDp"
            android:drawablePadding="@dimen/fiveDp"
            android:text="mac"
            android:textColor="@color/main_color"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_net"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fiveDp"
            android:drawablePadding="@dimen/fiveDp"
            android:text="mac"
            android:textColor="@color/main_color"
            android:textSize="13sp"
            android:visibility="gone"/>
        <!--
        android:drawableLeft="@mipmap/elec_iocn"
        android:text="@string/mainDayConsumeElec"
        -->
    </LinearLayout>

    <TextView
        android:id="@+id/stateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/fiftentDp"
        android:background="@drawable/offline_solid_conrners"
        android:paddingBottom="3dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="3dp"
        android:text="@string/mainOffineing"
        android:textColor="@color/white"
        android:textSize="12sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/more_icon"/>
</LinearLayout>
