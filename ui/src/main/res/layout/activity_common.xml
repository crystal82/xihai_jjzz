<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/slide_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/common_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/titleLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8"
            android:fitsSystemWindows="true"
            android:orientation="horizontal"
            android:background="@color/main_color"
            android:layout_gravity="center"
            >
            <ImageButton
                android:id="@+id/commonLeftBto"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@mipmap/left_icon"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:background="@drawable/main_color_selector"
                />
            <com.chipsea.view.text.CustomTextView
                android:id="@+id/commonTitleText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:gravity="center"
                android:layout_marginRight="40dp"
                android:text="@string/mainTitle"
                android:textColor="@color/white"
                app:customTextSize="38"
                />
            <ImageButton
                android:id="@+id/commonRightBto"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@mipmap/back"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@drawable/main_color_selector"
                />
            <com.chipsea.view.text.CustomTextView
                android:id="@+id/commonRightText"
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:gravity="center"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:textColor="@drawable/white_text_selecter"
                app:customTextSize="33"
                android:visibility="gone"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/commonContentLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="14.1"
            android:orientation="vertical">


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>