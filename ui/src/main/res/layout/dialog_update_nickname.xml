<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_corners_10"
    android:orientation="vertical">

    <com.chipsea.view.text.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/settingUpdateNickName"
        android:padding="20dp"
        android:textColor="@color/black_text"
        custom:customTextSize="40" />

    <com.chipsea.view.edit.CustomEditText
        android:id="@+id/edit_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="@dimen/fiftentDp"
        android:background="@drawable/gray_stroke"
        android:textColor="#B2B2B2"
        custom:customTextSize="38" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <com.chipsea.view.text.CustomTextView
            android:id="@+id/edit_cancle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/cancel"
            android:background="@drawable/base_dialog_left_corners_10_selector"
            android:padding="16dp"
            android:textColor="@android:color/white"
            custom:customTextSize="40" />

        <com.chipsea.view.text.CustomTextView
            android:id="@+id/edit_sure"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/sure"
            android:background="@drawable/base_dialog_right_corners_10_selector"
            android:textColor="@android:color/white"
            custom:customTextSize="40" />

    </LinearLayout>

</LinearLayout>
