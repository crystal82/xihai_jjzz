<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/fiftentDp"
    >

    <ImageView
        android:id="@+id/deviceIcon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/socket_icon"/>

    <LinearLayout
        android:id="@+id/middleLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/thirtyDp"
        android:layout_toRightOf="@+id/deviceIcon"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/deviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/edit_device_icon"
            android:drawablePadding="@dimen/fiveDp"
            android:text="羊羊羊的我是空调"
            android:textColor="@color/black_text"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/deviceMac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/fiveDp"
            android:text="MAC：djpacjosaf fvg"
            android:textColor="@color/gray_text"
            android:textSize="13sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tenDp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/managerBto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/main_color_corners_2_selector"
                android:drawablePadding="@dimen/fiveDp"
                android:paddingBottom="@dimen/fiveDp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="@dimen/fiveDp"
                android:text="@string/myDeviceManageDevice"
                android:textColor="@color/main_color"
                android:textSize="13sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/restartMatching"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tenDp"
                android:background="@drawable/main_color_corners_2_selector"
                android:drawablePadding="@dimen/fiveDp"
                android:paddingBottom="@dimen/fiveDp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="@dimen/fiveDp"
                android:text="@string/myDeviceRestartBind"
                android:textColor="@color/main_color"
                android:textSize="13sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/sendCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tenDp"
                android:background="@drawable/main_color_corners_2_selector"
                android:drawablePadding="@dimen/fiveDp"
                android:paddingBottom="@dimen/fiveDp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="@dimen/fiveDp"
                android:text="@string/myDeviceSendCode"
                android:textColor="@color/main_color"
                android:textSize="13sp"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/deleteDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/middleLayout"
        android:layout_alignParentRight="true"
        android:padding="@dimen/fiveDp"
        android:src="@mipmap/delete_device_icon"
        />
</RelativeLayout>
