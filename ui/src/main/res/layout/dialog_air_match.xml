<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_solid_corners_5"
    android:paddingBottom="@dimen/twentyDp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/air_match_dialog_top1"
        />
    <com.chipsea.view.text.CustomTextView
        android:id="@+id/tipText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/fiftentDp"
        android:layout_marginTop="@dimen/fiftentDp"
        android:text="@string/air_matching_dialog_tip1"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/twentyDp"
        android:layout_marginRight="@dimen/twentyDp"
        android:textColor="@color/black_text"
        custom:customTextSize="35"
        />
    <include layout="@layout/point_layout"></include>
</LinearLayout>
