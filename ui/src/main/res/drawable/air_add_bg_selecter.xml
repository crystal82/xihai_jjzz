<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/fiveDp"/>
            <stroke android:color="@color/black_weak_text" android:width="1dp"></stroke>
            <solid android:color="@color/switch_no_check" ></solid>
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/fiveDp"/>
            <stroke android:color="@color/black_weak_text" android:width="1dp"></stroke>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/fiveDp"/>
            <stroke android:color="@color/gray_text" android:width="1dp"></stroke>
        </shape>
    </item>
</selector>